{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":automergePatch",
    ":automergePr"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 10pm and before 5am on every weekday", "every weekend"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group React and React Router updates",
      "matchPackagePatterns": ["^react", "^@react-router"],
      "groupName": "React and React Router"
    },
    {
      "description": "Group Vite related updates",
      "matchPackagePatterns": ["^vite", "^@vitejs"],
      "groupName": "Vite"
    },
    {
      "description": "Group Hono related updates",
      "matchPackagePatterns": ["^hono", "^@hono"],
      "groupName": "Hono"
    },
    {
      "description": "Group TypeScript related updates",
      "matchPackageNames": ["typescript", "@types/node"],
      "groupName": "TypeScript"
    }
  ],
  "prConcurrentLimit": 3,
  "rangeStrategy": "bump",
  "postUpdateOptions": ["pnpmDedupe"]
}